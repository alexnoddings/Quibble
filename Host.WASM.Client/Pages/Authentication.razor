@page "/authentication/{action}"

<RemoteAuthenticatorView Action="@Action">
    <LoggingIn>
        Logging in
    </LoggingIn>
    <Registering>
        Registering
    </Registering>
    <UserProfile>
        Loading User Profile
    </UserProfile>
    <CompletingLoggingIn>
        Completing Log In
    </CompletingLoggingIn>
    <LogInFailed>
        Log in failed: @context
    </LogInFailed>
    <LogOut >
        Logging out
    </LogOut>
    <CompletingLogOut>
        Completing Log Out
    </CompletingLogOut>
    <LogOutFailed>
        Log out failed: @context
    </LogOutFailed>
    <LogOutSucceeded>
        Logged out
    </LogOutSucceeded>

</RemoteAuthenticatorView>

@code{
    [Parameter] public string Action { get; set; } = string.Empty;
}
