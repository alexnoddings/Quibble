@if (SiteStats is not null)
{
    <Row Margin="Margin.Is2.OnY">
        <Column Display="Display.Flex" Class="justify-content-center">
            <Heading Size="HeadingSize.Is3" Margin="Margin.Is4.OnX" Alignment="TextAlignment.Center">
                @($"{SiteStats.QuizCount.ToMetric(null, 1)} Quizzes")
            </Heading>
            <Heading Size="HeadingSize.Is3" Margin="Margin.Is4.OnX" Alignment="TextAlignment.Center">
                @($"{SiteStats.SubmittedAnswerCount.ToMetric(null, 1)} Answers")
            </Heading>
            <Heading Size="HeadingSize.Is3" Margin="Margin.Is4.OnX" Alignment="TextAlignment.Center">
                @($"{(SiteStats.AveragePercent * 100):F0}% Average")
            </Heading>
        </Column>
    </Row>
}
