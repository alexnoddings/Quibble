<PageTitle />
<CascadingAuthenticationState>
	<ThemeProvider Theme="@ThemeService.Theme">
		<OptionsModalHost>
			<Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
				<Found Context="routeData">
                    <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" Context="authState">
                        <Authorizing>
                            @* Usually fast enough that showing any content will just flash it *@
                        </Authorizing>
                        <NotAuthorized>
                            @if (authState.User.Identity?.IsAuthenticated == true)
                            {
                                <Heading Size="HeadingSize.Is1">Unauthorised.</Heading>
                            }
                            else
                            {
                                <RedirectToLogin/>
                            }
                        </NotAuthorized>
                    </AuthorizeRouteView>
				</Found>
				<NotFound>
					<LayoutView Layout="@typeof(MainLayout)">
						<p>Sorry, there's nothing at this address.</p>
					</LayoutView>
				</NotFound>
			</Router>
		</OptionsModalHost>
	</ThemeProvider>
</CascadingAuthenticationState>
