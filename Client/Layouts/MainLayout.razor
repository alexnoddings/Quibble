@inherits LayoutComponentBase

<Layout>
    <LayoutHeader>
        <Bar Breakpoint="Breakpoint.Desktop" Background="Background.Dark" ThemeContrast="ThemeContrast.Dark">
            <Container>
                <BarBrand>
                    <BarItem>
                        <BarLink To="/">
                            <QuibbleIcon Size="32"/>
                        </BarLink>
                    </BarItem>
                </BarBrand>
                <BarToggler/>
                <BarMenu>
                    <BarEnd>
                        <LoginDisplay/>
                    </BarEnd>
                </BarMenu>
            </Container>
        </Bar>
    </LayoutHeader>
    <LayoutContent Padding="Padding.Is5.OnY">
        <Container>
            @Body
        </Container>
    </LayoutContent>
    <LayoutFooter>
    </LayoutFooter>
</Layout>

