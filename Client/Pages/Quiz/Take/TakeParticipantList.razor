<Heading Size="HeadingSize.Is5" Padding="Padding.Is1.FromBottom.Is2.OnX" Class="border-bottom">
    In the lobby
</Heading>
@if (Quiz.Participants.Count <= 1)
{
    <Blazorise.Text Alignment="TextAlignment.Center" Color="TextColor.Muted" Italic="true">
        *tumbleweed*
    </Blazorise.Text>
}
else
{
    @foreach (var participant in Quiz.Participants.OrderBy(participant => participant.UserName))
    {
        <Blazorise.Text Padding="Padding.Is1.FromBottom.Is3.FromLeft">
            @participant.UserName
        </Blazorise.Text>
    }
}
