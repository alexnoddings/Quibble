@switch (QuizUiOperation.Status)
{
    case UiOperationStatus.Uninitialised:
    case UiOperationStatus.Loading:
        <Text Color="TextColor.White">Loading...</Text>
        break;
    case UiOperationStatus.NotFound:
        <Text Color="TextColor.White">Not found</Text>
        break;
    case UiOperationStatus.Loaded:
        var quiz = QuizUiOperation.Result;
        <CascadingValue Value="quiz">
            @if (quiz.PublishedAt != null)
            {
                if (quiz.OwnerId == UserId)
                {
                    <HostQuiz />
                }
                else
                {
                    <Text Color="TextColor.White">Take Quiz</Text>
                }
            }
            else
            {
                if (quiz.OwnerId == UserId)
                {
                    <EditQuiz />
                }
                else
                {
                    <Text Color="TextColor.White">Not found</Text>
                }
            }
        </CascadingValue>
        break;
}