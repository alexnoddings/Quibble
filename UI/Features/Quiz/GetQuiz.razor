@using BlazoriseText = Blazorise.Text

@switch (QuizUiOperation.Status)
{
    case UiOperationStatus.Uninitialised:
    case UiOperationStatus.Loading:
        <BlazoriseText Color="TextColor.White">Loading...</BlazoriseText>
        break;
    case UiOperationStatus.NotFound:
        <BlazoriseText Color="TextColor.White">Not found</BlazoriseText>
        break;
    case UiOperationStatus.Loaded:
        var quiz = QuizUiOperation.Result;
        <CascadingValue Value="quiz">
            @if (quiz.PublishedAt != null)
            {
                if (quiz.OwnerId == UserId)
                {
                    <HostQuiz />
                }
                else
                {
                    <BlazoriseText Color="TextColor.White">Take Quiz</BlazoriseText>
                }
            }
            else
            {
                if (quiz.OwnerId == UserId)
                {
                    <EditQuiz />
                }
                else
                {
                    <BlazoriseText Color="TextColor.White">Not found</BlazoriseText>
                }
            }
        </CascadingValue>
        break;
}