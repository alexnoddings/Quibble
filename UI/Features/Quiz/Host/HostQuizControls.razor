<Column ColumnSize="ColumnSize.Is4">
    <ActionButton Block="true" Color="Color.Primary" Clicked="MoveToPreviousQuestion" Disabled="@(SelectedQuestionNumber == 0 && SelectedRoundNumber == 0)">
        @(SelectedQuestionNumber == 0 ? "Previous Round" : "Previous Question")
    </ActionButton>
</Column>
<Column ColumnSize="ColumnSize.Is4">
    <Dropdown Direction="Direction.Down" class="w-100">
        @if (SelectedRound.State == RoundState.Hidden)
        {
            <ActionButton Block="true" Color="Color.Primary" Clicked="RevealRoundAsync">
                Reveal Round @(SelectedRoundNumber + 1)
            </ActionButton>
        }
        else if (SelectedQuestion.State == QuestionState.Hidden)
        {
            <ActionButton Block="true" Color="Color.Primary" Clicked="RevealQuestionAsync">
                Reveal Question @(SelectedQuestionNumber + 1)
            </ActionButton>
        }
        else if (SelectedQuestion.State == QuestionState.Visible)
        {
            <ActionButton Block="true" Color="Color.Primary" Clicked="LockQuestionAsync">
                Lock Question @(SelectedQuestionNumber + 1)
            </ActionButton>
        }
        else if (SelectedQuestion.State == QuestionState.Locked)
        {
            <ActionButton Block="true" Color="Color.Primary" Clicked="RevealCorrectAnswerAsync">
                Reveal Answer
            </ActionButton>
        }
        else
        {
            <ActionButton Block="true" Color="Color.Primary" Disabled="true">
                Question Revealed
            </ActionButton>
        }
        @if (SelectedRound.State == RoundState.Visible && SelectedRound.Questions.Any(q => q.State != QuestionState.AnswerRevealed))
        {
            <DropdownToggle Split="true" Color="Color.Primary"></DropdownToggle>
            <DropdownMenu>
                @if (SelectedRound.Questions.Any(q => q.State == QuestionState.Hidden))
                {
                    <ActionButton Clicked="RevealRoundQuestionsAsync">
                        Reveal All Questions in Round @(SelectedRoundNumber + 1)
                    </ActionButton>
                } 
                else if (SelectedRound.Questions.Any(q => q.State == QuestionState.Visible))
                {
                    <ActionButton Clicked="LockRoundQuestionsAsync">
                        Lock All Questions in Round @(SelectedRoundNumber + 1)
                    </ActionButton>
                }
                else if (SelectedRound.Questions.Any(q => q.State == QuestionState.Locked))
                {
                    <ActionButton Clicked="RevealRoundAnswersAsync">
                        Reveal All Answers in Round @(SelectedRoundNumber + 1)
                    </ActionButton>
                }
            </DropdownMenu>
        }
    </Dropdown>
</Column>
<Column ColumnSize="ColumnSize.Is4">
    <ActionButton Block="true" Color="Color.Primary" Clicked="MoveToNextQuestion" Disabled="@(SelectedRoundNumber == Quiz.Rounds.Count - 1 && SelectedQuestionNumber == SelectedRound.Questions.Count - 1)">
        @(SelectedQuestionNumber == SelectedRound.Questions.Count - 1 ? "Next Round" : "Next Question")
    </ActionButton>
</Column>
