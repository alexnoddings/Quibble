<Container Padding="Padding.Is0">
    <Heading Size="HeadingSize.Is2">
        <Text Alignment="TextAlignment.Center" Color="TextColor.White">
            @Quiz.Title
        </Text>
        <Text Alignment="TextAlignment.Center" Color="TextColor.White">
            Score: @CalculateScore()
        </Text>
    </Heading>
    @foreach (SyncedRound round in Quiz.Rounds.Where(r => r.State == RoundState.Visible))
    {
        <CascadingValue Value="round">
            <TakeRound />
        </CascadingValue>
    }
</Container>