<Card Margin="Margin.Is3.FromTop">
    <CardHeader>
        <CardTitle>
            <Row Margin="Margin.Is2">
                <Column ColumnSize="ColumnSize.Is10">
                    <DelayedTextEdit Placeholder="Round Title" @bind-Text="Round.Title" DelayedTextChanged="Round.SaveTitleAsync"></DelayedTextEdit>
                </Column>
                <Column ColumnSize="ColumnSize.Is2">
                    <ActionButton Outline="true" Block="true" Color="Color.Danger" Clicked="Round.DeleteAsync">Delete</ActionButton>
                </Column>
            </Row>
        </CardTitle>
    </CardHeader>
    <CardBody>
        @foreach (var question in Round.Questions)
        {
            <EditQuestion Question="question"></EditQuestion>
        }
        <Row Margin="Margin.Is2.OnY">
            <Column ColumnSize="ColumnSize.Is4.Is4.WithOffset">
                <Buttons class="d-flex justify-content-center">
                    <ActionButton Color="Color.Info" Clicked="async () => await AddQuestionsAsync(1)">New Question x1</ActionButton>
                    <ActionButton Color="Color.Info" Clicked="async () => await AddQuestionsAsync(5)">x5</ActionButton>
                    <ActionButton Color="Color.Info" Clicked="async () => await AddQuestionsAsync(10)">x10</ActionButton>
                </Buttons>
            </Column>
        </Row>
    </CardBody>
</Card>