<Row Margin="Margin.Is2">
    <Column ColumnSize="ColumnSize.Is7">
        <DelayedTextEdit @bind-Text="Question.QuestionText" Placeholder="Question Text" DelayedTextChanged="Question.SaveTextAsync"></DelayedTextEdit>
    </Column>
    <Column ColumnSize="ColumnSize.Is3">
        <DelayedTextEdit @bind-Text="Question.CorrectAnswer" Placeholder="Question Answer" DelayedTextChanged="Question.SaveCorrectAnswerAsync"></DelayedTextEdit>
    </Column>
    <Column ColumnSize="ColumnSize.Is2">
        <ActionButton Outline="true" Block="true" Color="Color.Danger" Clicked="Question.DeleteAsync">Delete</ActionButton>
    </Column>
</Row>