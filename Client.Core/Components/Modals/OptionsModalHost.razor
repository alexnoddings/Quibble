<CascadingValue Value="this">
    @ChildContent
</CascadingValue>

<Modal @ref="Modal" Closing="OnModalClosing">
    <ModalContent Centered="true">
        <ModalHeader>
            <ModalTitle>
                @Title
            </ModalTitle>
            @if (CanBeClosed)
            {
                <CloseButton/>
            }
        </ModalHeader>
        <ModalBody>
            @Body
        </ModalBody>
        <ModalFooter>
            @Footer
        </ModalFooter>
    </ModalContent>
</Modal>
