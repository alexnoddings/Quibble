@inherits SyncedEntityComponent

<CascadingValue IsFixed="true" Value="Selection">
    <Row>
        <Column ColumnSize="ColumnSize.Is12.Is9.OnWidescreen.Is3.WithOffset.OnWidescreen" Margin="Margin.Is3.FromBottom">
            <Heading Size="HeadingSize.Is3" Alignment="TextAlignment.Center" Class="text-break">
                @Quiz.Title
            </Heading>
        </Column>
    </Row>
    <Row Display="Display.Flex.ReverseColumn" Class="d-flex flex-column-reverse flex-lg-row">
        <Column ColumnSize="ColumnSize.Is12.Is2.OnWidescreen.Is3.OnFullHD">
            <Row>
                <Column ColumnSize="ColumnSize.Is6.OnMobile.Is12.OnWidescreen" Margin="Margin.Is3.FromBottom">
                    <HostParticipantList Quiz="Quiz"/>
                </Column>
                <Column ColumnSize="ColumnSize.Is6.Is12.OnWidescreen" Margin="Margin.Is3.FromBottom">
                    <HostQuestionList Quiz="Quiz"/>
                </Column>
            </Row>
        </Column>
        <Column ColumnSize="ColumnSize.Is12.Is10.OnWidescreen.Is9.OnFullHD" Margin="Margin.Is3.FromBottom">
            <HostQuestionView Quiz="Quiz"/>
        </Column>
    </Row>
</CascadingValue>
